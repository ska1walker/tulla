rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    function isNotBanned() {
      return isSignedIn() &&
        (!exists(/databases/$(database)/documents/users/$(request.auth.uid)) ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isBanned != true);
    }

    function isProjectOwner(projectId) {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/projects/$(projectId)) &&
        get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId == request.auth.uid;
    }

    function isProjectMember(projectId) {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/projects/$(projectId)/members/$(request.auth.uid));
    }

    function getProjectRole(projectId) {
      return get(/databases/$(database)/documents/projects/$(projectId)/members/$(request.auth.uid)).data.role;
    }

    function canEditProject(projectId) {
      return isAdmin() ||
        (isProjectMember(projectId) && getProjectRole(projectId) in ['owner', 'editor']);
    }

    function canViewProject(projectId) {
      return isAdmin() || isProjectMember(projectId);
    }

    // Validation helpers
    function isValidEmail(email) {
      return email is string && email.matches('^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$');
    }

    function isValidProjectName(name) {
      return name is string && name.size() > 0 && name.size() <= 200;
    }

    function isValidRole(role) {
      return role in ['owner', 'editor', 'viewer'];
    }

    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());

      allow create: if isSignedIn() &&
        request.auth.uid == userId &&
        request.resource.data.keys().hasAll(['email', 'createdAt']) &&
        isValidEmail(request.resource.data.email) &&
        request.resource.data.isAdmin == false &&
        request.resource.data.isBanned == false;

      allow update: if isSignedIn() && (
        (request.auth.uid == userId &&
         !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin', 'isBanned'])) ||
        isAdmin()
      );

      allow delete: if isAdmin();
    }

    // Projects collection
    match /projects/{projectId} {
      allow create: if isSignedIn() && isNotBanned() &&
        request.resource.data.ownerId == request.auth.uid &&
        request.resource.data.keys().hasAll(['name', 'ownerId', 'createdAt']) &&
        isValidProjectName(request.resource.data.name);

      allow read: if canViewProject(projectId);

      allow update: if canEditProject(projectId) &&
        (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['ownerId']) || isAdmin());

      allow delete: if isAdmin() || isProjectOwner(projectId);

      // Project members subcollection
      match /members/{memberId} {
        allow read: if canViewProject(projectId);

        allow create: if (isAdmin() || isProjectOwner(projectId)) &&
          request.resource.data.keys().hasAll(['role', 'joinedAt']) &&
          isValidRole(request.resource.data.role);

        allow update: if (isAdmin() || isProjectOwner(projectId)) &&
          isValidRole(request.resource.data.role) &&
          (resource.data.role != 'owner' || isAdmin());

        allow delete: if (isAdmin() || isProjectOwner(projectId)) &&
          resource.data.role != 'owner';
      }

      // Campaigns subcollection
      match /campaigns/{campaignId} {
        allow read: if canViewProject(projectId);

        allow create: if canEditProject(projectId) &&
          request.resource.data.keys().hasAll(['name', 'channelId', 'typeId', 'startDate', 'endDate']) &&
          request.resource.data.typeId is string &&
          request.resource.data.typeId.size() > 0;

        allow update: if canEditProject(projectId);
        allow delete: if canEditProject(projectId);
      }

      // Channels subcollection
      match /channels/{channelId} {
        allow read: if canViewProject(projectId);

        allow create: if canEditProject(projectId) &&
          request.resource.data.keys().hasAll(['name']) &&
          request.resource.data.name is string &&
          request.resource.data.name.size() > 0;

        allow update, delete: if canEditProject(projectId);
      }

      // Settings subcollection
      match /settings/{settingId} {
        allow read: if canViewProject(projectId);
        allow create, update, delete: if canEditProject(projectId);
      }
    }

    // Invitations collection
    match /invitations/{invitationId} {
      allow read: if isSignedIn() && (
        isAdmin() ||
        resource.data.invitedBy == request.auth.uid ||
        (request.auth.token.email_verified == true &&
         resource.data.email.lower() == request.auth.token.email.lower())
      );

      allow create: if isSignedIn() && isNotBanned() &&
        (isAdmin() || isProjectOwner(request.resource.data.projectId)) &&
        request.resource.data.keys().hasAll(['projectId', 'email', 'role', 'token', 'status', 'invitedBy', 'createdAt', 'expiresAt']) &&
        isValidEmail(request.resource.data.email) &&
        isValidRole(request.resource.data.role) &&
        request.resource.data.status == 'pending' &&
        request.resource.data.invitedBy == request.auth.uid;

      allow update: if isSignedIn() && (
        isAdmin() ||
        resource.data.invitedBy == request.auth.uid ||
        (request.auth.token.email_verified == true &&
         resource.data.email.lower() == request.auth.token.email.lower())
      ) && request.resource.data.status in ['pending', 'accepted', 'expired', 'cancelled'];

      allow delete: if isAdmin() || resource.data.invitedBy == request.auth.uid;
    }

    // Legacy artifacts collection - restricted
    match /artifacts/{document=**} {
      allow read: if isSignedIn() && isNotBanned();
      allow write: if false;
    }
  }
}
